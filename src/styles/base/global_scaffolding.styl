// Global styles

*
*::before
*::after
	box-sizing inherit

html
	width 100%
	height 100%
	box-sizing border-box
	-webkit-tap-highlight-color rgba(0,0,0,0)

body
	width 100%
	height 100%
	display flex
	justify-content center
	align-items center
	margin 0
	padding 0

	&.blocked
		overflow hidden

img
	max-width 100%
	height auto
	vertical-align middle

.visuallyhidden
	position absolute
	overflow hidden
	clip rect(0 0 0 0)
	height 1px
	width 1px
	margin -1px
	padding 0
	border 0

