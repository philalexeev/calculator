.calculator
	display grid
	grid-gap 1px
	width 300px
	grid-template-columns repeat(4, 1fr)
	background-color #aaa
	box-shadow 0 0 30px 0 rgba(0, 0, 0, 0.3)
	overflow hidden

.display
	grid-column 1 / 5
	width 100%
	padding 10px 20px
	margin 0
	font-family 'Play'
	font-size 40px
	font-weight bold
	background-color #aaa
	border none
	text-align right

.grid-item
	padding 10px 0
	font-family 'Play'
	font-size 40px
	text-align center
	border none
	user-select none

	&:hover
		background-color lighten(#ddd, 20%)

.zero
	grid-column 1 / 3

.operator
	background-color orange
	color #fff

	&:hover
		background-color lighten(orange, 10%)
